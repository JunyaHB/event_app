<div class="main user-show">
  <div class="container">
    <div class="user">

    <p>
      <img src="<%= "/user_images/#{@user.image_name}"%>" style="float:left;">
      <h2 class="proname"><%= @user.name %></h2>
      <p class="proint"> <%=  simple_format(@user.introduction) %></p>
    </p>  

    <p align="right">
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </p>
    </div>

   
    <ul class="user-tabs">
      <li><%= link_to("主催", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("参加予定", "/users/#{@user.id}/joins") %></li>
    </ul>


    <% @joins.each do |join| %>
      <% event = @future_event.find_by(id: join.event_id) %>
      
      <div class="events-index-item">
        <div class="event-left">
          <img src="<%= "/event_images/#{event.event_image}" %>">
        </div>
        <div class="event-right">
          <div class="event-user-name">
            <%= link_to(event.event_name, "/events/#{event.id}") %>
          </div>
          <%= event.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>
